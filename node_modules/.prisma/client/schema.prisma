generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String          @id @default(cuid())
  name       String
  email      String
  workspaces UserWorkspace[]
}

model Workspace {
  id    String          @id @default(cuid())
  name  String
  users UserWorkspace[]
}

model UserWorkspace {
  id          String    @id @default(cuid())
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
}
